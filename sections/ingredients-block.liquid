{{ 'component-ingredients.css' | asset_url | stylesheet_tag }}

<div class="ingredients {% if section.settings.full_width %}ingredients--full-width{% else %}page-width{% endif %} color-scheme-{{ section.settings.color_scheme }}">
  <div class="ingredients__grid color-{{ section.settings.color_scheme }}{% if section.settings.layout == 'text_first' %} ingredients__grid--reverse{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet">
    <div class="grid__item">
      <div class="ingredients__media ingredients__media--{{ section.settings.height }}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        <div class="{% if section.settings.image != blank %}media{% else %}ingredients__media--placeholder placeholder{% endif %}">
        {%- if section.settings.image != blank -%}
          <img
            srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
              {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
              {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '1070x' }} 1070w,{%- endif -%}
              {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}"
            src="{{ section.settings.image | img_url: '1500x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
        </div>
      </div>
    </div>
    <div class="grid__item">
      <div class="ingredients__content ingredients__content--{{ section.settings.height }}">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h2 class="ingredients__heading h1" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {%- when 'text' -%}
              <div class="ingredients__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.ingredients.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.ingredients.settings.image.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.ingredients.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.ingredients.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.ingredients.settings.height.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.ingredients.settings.height.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "t:sections.ingredients.settings.color_scheme.options__1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.ingredients.settings.color_scheme.options__2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.ingredients.settings.color_scheme.options__3.label"
        },
        {
          "value": "accent-1",
          "label": "t:sections.ingredients.settings.color_scheme.options__4.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.ingredients.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.ingredients.settings.color_scheme.label"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.ingredients.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.ingredients.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.ingredients.settings.layout.label",
      "info": "t:sections.ingredients.settings.layout.info"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.ingredients.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Ingredient Name",
          "label": "t:sections.ingredients.blocks.heading.settings.heading.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.ingredients.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.ingredients.blocks.text.settings.text.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.ingredients.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
